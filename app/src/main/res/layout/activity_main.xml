<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/options_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="76dp"
        android:contentDescription="@string/todo"
        android:tint="#388C97"
        app:layout_constraintBottom_toTopOf="@+id/squish_the_bugs_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_manage" />

    <Button
        android:id="@+id/play_button"
        android:layout_width="148dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:text="@string/play"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/shop_buttom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/squish_the_bugs_text"
        tools:visibility="visible" />

    <Button
        android:id="@+id/shop_buttom"
        android:layout_width="148dp"
        android:layout_height="0dp"
        android:layout_marginBottom="309dp"
        android:text="@string/shop"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play_button"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/squish_the_bugs_text"
        android:layout_width="216dp"
        android:layout_height="0dp"
        android:layout_marginTop="172dp"
        android:layout_marginBottom="76dp"
        android:text="@string/squish_the_bugs"
        android:textColor="#388C97"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/play_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>